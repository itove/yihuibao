{% extends 'base.html.twig' %}

{% block title %}团队成员 - {{ parent() }}{% endblock %}

{% block body %}
    {# Page Header #}
    <div class="page-header">
        <div class="container">
            <div class="row page-section">
                <div class="col-md-8">
                    <h4>Our Team</h4>
                    <h1>团队成员</h1>
                </div>
            </div>
        </div>
    </div>

    {# Doctor section #}
    <div class="ptb80">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <h1 class="heading-title">团队成员</h1>
                    <h4 class="sub-title mb30">Our Team</h4>
                </div>
            </div>
            {% for row in staffs|slice(0,4)|batch(4) %}
                <div class="row">
                    {% for doctor in row %}
                        <div class="col-lg-3 col-md-3">
                            <div class="dc-style-box">
                                <a href="{{ path('app_doctor_details', {id: doctor.id}) }}">
                                    <img src="{{ asset('images/' ~ doctor.image) }}" class="img-responsive" alt="{{ doctor.title }}" />
                                </a>
                                <div class="dc-style-inner">
                                    <ul>
                                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                    </ul> 
                                    <h5><a href="{{ path('app_doctor_details', {id: doctor.id}) }}">{{ doctor.title }}</a></h5>
                                    <span>{{ doctor.title }}</span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
            <div class="row">
                <div class="col-md-12 text-center">
                    <a href="{{ path('app_doctors', {page: 1}) }}" class="btn btn-default">查看更多</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 
