{% extends 'base.html.twig' %}

{% block title %}{{ page.name }} - {{ parent() }}{% endblock %}

{% block body %}
    {# Banner Section #}
    <div class="banner-section">    
        {# Slider #}
        <div class="slider">
            {% for slide in slider %}
                <div class="item" style="background-image: url('{{ asset("images/#{slide.image}") }}')">
                    <div class="overlay-home"></div>
                    <div class="slide-captions">
                        <div class="container">
                            <div class="slide-title">{{ slide.title }}</div>
                            <div class="slide-heading">{{ slide.summary }}</div>
                            <div class="mt50">
                                <a href="{{ path('app_about') }}" class="btn btn-linegreen">关于我们</a>
                                <a href="{{ path('app_services') }}" class="btn btn-lineblue">产品服务</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Specialities Block #}
        <div class="container specialities-block">
            <div class="specialities-box">
                <div class="specialities-title">
                    <h6 class="heading-title">我们</h6>
                    <h3 class="heading-title">的优势</h3>
                </div>
                <ul class="listnone mb0">
                    {% for speciality in youshi %}
                        <li>
                            <div class="specialities-icon"><i class="iconmed-{{ speciality.image }}"></i></div>
                            <div class="specialities-content">
                                <h3 class="mb5">{{ speciality.title }}</h3>
                                <p>{{ speciality.summary }}</p>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
                <div class="text-center">
                    <a href="{{ path('app_departments') }}" class="btn btn-default btn-lg">产品服务</a>
                </div>
            </div>   
        </div>
    </div>

    {# Testimonial Section #}
    <div class="testimonial-section">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-4 testimonial-arrow-right">
                    <div id="testimonial-thumb" class="owl-carousel">                    
                        {% for item in testimonial %}
                            <div class="testimonial-box projectitem">
                                <img src="{{ asset("images/#{item.image}") }}" class="img-circle" alt="{{ item.title }}" />
                            </div>
                        {% endfor %}
                    </div>   
                </div>
                <div class="col-md-9 col-sm-8">
                    <div id="testimonial-content" class="owl-carousel">                    
                        {% for item in testimonial %}
                            <div class="projectitem">
                                <div class="testimonial-contact">
                                    <div class="testimonial-text">{{ item.title}}</div>
                                    <div class="testimonial-name">{{ item.summary}}</div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# About Section #}
    <div class="about-section">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-3 col-md-6">
                    <img src="{{ asset('images/home-doctor-team.jpg') }}" class="img-responsive" alt="Doctor Team" >
                </div>            
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-10">
                    <div class="about-whitebox">
                        <div class="row">
                            <div class="col-md-12">
