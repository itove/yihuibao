{% extends 'base.html.twig' %}

{% block title %}{{ page.name }} - {{ parent() }}{% endblock %}

{% block body %}
    {# Banner Section #}
    <div class="banner-section">    
        {# Slider #}
        <div class="slider">
            {% for slide in slider %}
                <div class="item" style="background-image: url('{{ asset("images/#{slide.image}") }}')">
                    <div class="overlay-home"></div>
                    <div class="slide-captions">
                        <div class="container">
                            <div class="slide-title">{{ slide.title }}</div>
                            <div class="slide-heading">{{ slide.summary }}</div>
                            <div class="mt50">
                                <a href="{{ path('app_about') }}" class="btn btn-linegreen">关于我们</a>
                                <a href="{{ path('app_services') }}" class="btn btn-lineblue">产品服务</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Specialities Block #}
        <div class="container specialities-block">
            <div class="specialities-box">
                <div class="specialities-title">
                    <h6 class="heading-title">我们</h6>
                    <h3 class="heading-title">的优势</h3>
                </div>
                <ul class="listnone mb0">
                    {% for speciality in youshi %}
                        <li>
                            <div class="specialities-icon"><i class="iconmed-{{ speciality.image }}"></i></div>
                            <div class="specialities-content">
                                <h3 class="mb5">{{ speciality.title }}</h3>
                                <p>{{ speciality.summary }}</p>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
                <div class="text-center">
                    <a href="{{ path('app_departments') }}" class="btn btn-default btn-lg">产品服务</a>
                </div>
            </div>   
        </div>
    </div>

    {# Testimonial Section #}
    <div class="testimonial-section">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-4 testimonial-arrow-right">
                    <div id="testimonial-thumb" class="owl-carousel">                    
                        {% for item in testimonial %}
                            <div class="testimonial-box projectitem">
                                <img src="{{ asset("images/#{item.image}") }}" class="img-circle" alt="{{ item.title }}" />
                            </div>
                        {% endfor %}
                    </div>   
                </div>
                <div class="col-md-9 col-sm-8">
                    <div id="testimonial-content" class="owl-carousel">                    
                        {% for item in testimonial %}
                            <div class="projectitem">
                                <div class="testimonial-contact">
                                    <div class="testimonial-text">{{ item.title}}</div>
                                    <div class="testimonial-name">{{ item.summary}}</div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# About Section #}
    <div class="about-section">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-3 col-md-6">
                    <img src="{{ asset('images/home-doctor-team.jpg') }}" class="img-responsive" alt="Doctor Team" >
                </div>            
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-10">
                    <div class="about-whitebox">
                        <div class="row">
                            <div class="col-md-12">
                                <h1 class="heading-title">关于我们</h1>
                                <h4 class="sub-title mb30"></h4>
                                <p>专注于医疗行业风险管理解决方案的创新型科技企业，始终致力于运用前沿技术为医疗机构筑牢安全防线，助力其实现高效、稳定的运营。</p>
                                <div class="text-center">
                                    <a href="{{ path('app_about') }}" class="btn btn-default">了解详情</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>            
            </div>
        </div>
    </div>

    {# Department Section #}
    <div class="department-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1 class="heading-title">产品服务</h1>
                    <h4 class="sub-title mb60">Our department & special services</h4>                
                </div>
            </div>
            <div class="row">
                {% set department = [
                    {icon: 'oralhealth', title: 'Oral Health'},
                    {icon: 'otology', title: 'Otology'},
                    {icon: 'hepatology', title: 'Hepatology'},
                    {icon: 'gastroenterology', title: 'Gastroenterology'},
                    {icon: 'ophthalmology', title: 'Ophthalmology'},
                    {icon: 'orthopedics', title: 'Orthopedics'}
                ] %}
                {% for i in services %}
                    <div class="col-md-4 col-sm-6">
                        <div class="row">
                            <div class="col-md-3 col-sm-3 department-inner-icon">
                                <i class="iconmed-{{ department[loop.index0].icon }} department-icon"></i>
                            </div>
                            <div class="col-md-9 col-sm-9">
                                <h2 class="service-title" style="font-size: 1em;"><a href="#">{{ i.title }}</a></h2>
                                <p class="mb60 service-summary ellipsis-2">{{ i.summary }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <a href="{{ path('app_services') }}" class="btn btn-default">查看详情</a>
                </div>
            </div>
        </div>
    </div>

    {# Doctor Section #}
    <div class="doctor-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1 class="heading-title">团队成员</h1>
                    <h4 class="sub-title">Here is our specialized team</h4>                  
                </div>
            </div>
            <div class="row dt-bottom">
                <div class="col-md-9">
                    <div class="tab-content">
                        {% for staff in staffs %}
                            <div role="tabpanel" class="tab-pane {% if loop.first %}active{% endif %}" id="dr{{ loop.index }}">
                                <div class="row">
                                    <div class="col-md-4">
                                        {#
                                        <img src="{{ asset('images/' ~ staff.image|default('images/dr-main-home.png')) }}" class="img-responsive" alt="{{ staff.title }}" />
                                        #}
                                        <img src="/images/dr-main-home.png" class="img-responsive" alt="{{ staff.title }}" />
                                    </div>
                                    <div class="col-md-8">
                                        <div class="dr-details">
                                            <h2 class="mb0">{{ staff.title }}</h2>
                                            <h4 class="mb25">{{ staff.title }}</h4>                                    
                                            <p class="ellipsis-2">{{ staff.summary }}</p>
                                            <a href="{{ path('app_appointment') }}" class="btn btn-default mr10">了解详情</a>
                                            <a href="{{ path('app_doctor_details', {'id': staff.id}) }}" class="btn btn-primary">查看更多</a>                                    
                                            <div class="dr-social-box">
                                                <ul>
                                                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                                    <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                                </ul>
                                            </div>                                   
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-md-3">
                  <div class="dr-tabs-box"> 
                    <ul class="nav dr-tab" role="tablist">
                        {% for staff in staffs|slice(0, 3) %}
                            <li role="presentation" class="{% if loop.first %}active{% endif %}">
                                <a href="#dr{{ loop.index }}" aria-controls="dr{{ loop.index }}" role="tab" data-toggle="tab">
                                    <div class="dr-box">
                                        <span class="dr-img">
                                        <img src="{{ asset('images/' ~ staff.image|default('images/dr-thumb.png')) }}" class="img-circle" alt="{{ staff.title }}" style="height: 60px; width: 60px; object-fit: cover;">
                                        </span>
                                        <span class="dr-title">{{ staff.title }}</span>
                                        <span class="dr-sub-title d-none">{{ staff.title }}</span>
                                    </div>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                  </div>
                </div>
            </div>
        </div>
    </div>

    {# Why Choose Us Section #}
    <div class="why-choose-section">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-1 col-md-10 text-center">
                    <h1 class="heading-title">选择我们</h1>
                    <h4 class="sub-title mb30">Here is our speciality</h4>
                    <p>根据不同医院规模、科室设置和管理需求，定制专属风险管理方案。</p>
                </div>
            </div>
            <div class="row">
                {% for stat in [
                    {icon: 'building-o', count: 600, text: '行业案例'},
                    {icon: 'user-md', count: 200, text: '地区'},
                    {icon: 'trophy', count: 18, text: '年耕耘'},
                    {icon: 'smile-o', count: 3000, text: '客户信任'}
                ] %}
                    <div class="col-md-3 col-sm-6">
                        <div class="why-choose-box">
                            <div class="why-icon-box">
                                <i class="fa fa-{{ stat.icon }}"></i>
                            </div>
                            <div class="why-choose-content">
                                <div class="why-heading counter">{{ stat.count }}</div>
                                <div class="why-sub-heading">{{ stat.text }}</div>
                            </div>                    
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {# Blog Section #}
    <div class="blog-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1 class="heading-title">行业资讯</h1>
                    <h4 class="sub-title">Featured news</h4>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-3 col-sm-3">
                            <div class="blog-section-day">15</div>
                            <div class="blog-section-month">2024-12</div>
                        </div>
                        <div class="col-md-9 col-sm-9">
                            <h2><a href="#" class="black">医保带来的发展新增量</a></h2>
                            <div class="blog-section-meta meta-box-tag">
                                <span class="meta-author">发布人: <a href="#" class="meta-link">admin</a></span>
                            </div>
                            <p>国家医保局自2018年组建以来，在坚持管好用好医保基金，奋力解除广大人民疾病医疗后顾之忧的同时，积极服务经济社会发展，持续为社会进步、人民健康和经济发展注入新增量。</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="blog-section-img">
                        <img src="{{ asset('images/blog-home.jpg') }}" class="img-responsive" alt="Blog">
                    </div>
                </div>
                <div class="col-md-12 text-center mt50">
                    <a href="{{ path('app_blog') }}" class="btn btn-default">查看更多</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
